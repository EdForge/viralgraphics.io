{
    "source": {
        "include": [ "../vglib", "../vglib/UI", "../vglib/render", "../web/vg-system.js", "../web/vg-webgl.js" ],
        "exclude": [ /* array of paths to exclude */ ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
	"tags"      : {
		"allowUnknownTags" : true
	},
	"plugins"   : ["plugins/markdown"],
	"templates" : {
		"cleverLinks"           : false,
		"monospaceLinks"        : false,
		"dateFormat"            : "ddd MMM Do YYYY",
		"outputSourceFiles"     : false,
		"outputSourcePath"      : false,
		"systemName"            : "ViralGraphics.io",
		"footer"                : "",
		"copyright"             : "ViralGraphics.io Copyright Â© 2014-2017 Markus Moenig",
		"navType"               : "vertical",
		"theme"                 : "spacelab",
		"linenums"              : true,
		"collapseSymbols"       : false,
		"inverseNav"            : true
	},
	"markdown"  : {
		"parser"   : "gfm",
		"hardwrap" : false
    },
    "opts": {
        "template": "node_modules/ink-docstrap/template",
        "destination": "../docs/",
        "tutorials": "../docs/in/tutorials/"
    }
}